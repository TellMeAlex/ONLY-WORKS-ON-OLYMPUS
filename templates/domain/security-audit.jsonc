        },
        "target_agent": "atlas",
        "config_overrides": {
          "prompt": "Authorization security reviewer. Review authorization implementation: RBAC/ABAC, permission checks, privilege escalation risks, and admin interfaces.",
          "variant": "authz-security"
        }
      },

      // ========================================================================
      // Input Validation Security
      // ========================================================================
      {
        "matcher": {
          "type": "keyword",
          "keywords": ["input validation", "sql injection", "xss", "csrf", "injection"],
          "mode": "any"
        },
        "target_agent": "atlas",
        "config_overrides": {
          "prompt": "Input validation security specialist. Review and implement input validation to prevent injection attacks: SQLi, XSS, CSRF, command injection, path traversal.",
          "variant": "input-validation"
        }
      },

      // ========================================================================
      // Cryptography Review
      // ========================================================================
      {
        "matcher": {
          "type": "keyword",
          "keywords": ["cryptography", "encryption", "crypto review", "hash", "crypto security"],
          "mode": "any"
        },
        "target_agent": "atlas",
        "config_overrides": {
          "prompt": "Cryptography security specialist. Review cryptographic implementation: algorithms, key management, IVs/nonce handling, padding, and random number generation.",
          "variant": "cryptography"
        }
      },

      // ========================================================================
      // Security Monitoring & Logging
      // ========================================================================
      {
        "matcher": {
          "type": "keyword",
          "keywords": ["security logging", "audit log", "security monitoring", "security event"],
          "mode": "any"
        },
        "target_agent": "prometheus",
        "config_overrides": {
          "prompt": "Security logging and monitoring specialist. Design security monitoring: audit logging, security event detection, alerting, and SIEM integration.",
