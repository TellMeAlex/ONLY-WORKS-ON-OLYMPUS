      // ========================================================================
      {
        "matcher": {
          "type": "keyword",
          "keywords": ["incident response", "security incident", "breach response", "security playbook"],
          "mode": "any"
        },
        "target_agent": "oracle",
        "config_overrides": {
          "prompt": "Incident response specialist. Design incident response plans, security playbooks, and runbooks. Define detection, containment, eradication, and recovery procedures.",
          "variant": "incident-response"
        }
      },

      // ========================================================================
      // High Complexity Security Tasks
      // ========================================================================
      {
        "matcher": {
          "type": "complexity",
          "threshold": "high"
        },
        "target_agent": "oracle",
        "config_overrides": {
          "prompt": "Security architect: This is a high-complexity security task. Analyze from first principles, considering attack vectors, defense in depth, compliance requirements, and long-term security posture.",
          "variant": "complex"
        }
